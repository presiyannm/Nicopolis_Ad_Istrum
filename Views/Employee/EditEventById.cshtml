@model AddEventViewModel

<h2>Редактиране на събитие</h2>

<form asp-action="EditEventById" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Име на събитието:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Date" class="control-label">Дата:</label>
        <input asp-for="Date" type="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ApplicationUserId" value="@Model.ApplicationUserId" />
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-primary">Запази промените</button>
</form>
