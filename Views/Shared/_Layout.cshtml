<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nicopolis_Ad_Istrum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nicopolis_Ad_Istrum.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navb">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-row justify-content-between align-items-center flex-wrap mb-5">
                            <div class="d-inline-block">
                                @if (!User.IsInRole("Science Associate"))
                                {
                                    <figure class="logo d-flex align-items-center">
                                        <a asp-controller="Home" asp-action="Index"><img src="~/images/logo/logo.png" alt="Никополис ад Иструм" /></a>
                                    </figure>
                                }
                                else
                                {
                                    <figure class="logo-admin d-flex align-items-center">
                                        <a asp-controller="Home" asp-action="Index"><img src="~/images/logo/logo.png" alt="Никополис ад Иструм" /></a>
                                    </figure>
                                }
                            </div>
                            <ul class="nav-links my-0 py-0 d-inline-block">

                                <li class="px-1 py-5 my-1">
                                    <a asp-area="" asp-controller="User" asp-action="SeeAllCollections">Колекции</a>
                                </li>

                                <li class="px-1 py-5 my-1">
                                    <a asp-area="" asp-controller="User" asp-action="SeeAllExhibitsByCollections">Експонати</a>
                                </li>

                                <li class="px-1 py-5 my-1">
                                    <a asp-area="" asp-controller="User" asp-action="SeeAllEvents">Събития</a>
                                </li>

                                @if (User.IsInRole("Administrator"))
                                {
                                    <li class="px-1 py-5 my-1">
                                        <a asp-area="" asp-controller="Administrator" asp-action="SeeAllUsers">Всички потребители</a>
                                    </li>

                                    <li class="px-1 py-5 my-1">
                                        <a asp-area="" asp-controller="Administrator" asp-action="AddChoice">Добави</a>
                                    </li>
                                }

                                @if (User.IsInRole("Science Associate"))
                                {
                                    <li class="px-1 py-5 my-1">
                                        <a asp-area="" asp-controller="Associate" asp-action="AddCollection">Добави колекция</a>
                                    </li>
                                    <li class="px-1 py-5 my-1">
                                        <a asp-area="" asp-controller="Associate" asp-action="AddExhibit">Добави експонат</a>
                                    </li>
                                }

                                @if (User.IsInRole("Employee"))
                                {
                                    <li class="px-1 py-5 my-1">
                                        <a asp-area="" asp-controller="Employee" asp-action="AddEvent">Добави събитие</a>
                                    </li>
                                }
                                <partial name="_LoginPartial" />
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
