@model AddExhibitViewModel

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <!-- Add your CSS files here -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-Q6E4yUw8doU2zLMH/Rl6jjDeCBr0hbvdH2yijXQnC4CZ6+09mMfn5bgRmA9R1U5J" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Associate/AddExhibit.css" />
</head>
<body>
    <div class="view-container">

        @{
            ViewData["Title"] = "Добави експонат";
        }

        <form method="post" enctype="multipart/form-data" class="form-container">

            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Име на експоната:</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Въведете името на експоната" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание:</label>
                <textarea asp-for="Description" class="form-control" placeholder="Добавете описание на експоната" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhotoFileName" class="form-label">Добави снимка:</label>
                <input type="file" asp-for="PhotoFileName" class="form-control" />
                <span asp-validation-for="PhotoFileName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Origin" class="form-label">Произход:</label>
                <input type="text" asp-for="Origin" class="form-control" placeholder="Въведете произхода" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EraId" class="form-label">Ера:</label>
                <select asp-for="EraId" asp-items="Model.Eras" class="form-select">
                    <option value="">Изберете ера</option>
                </select>
                <span asp-validation-for="EraId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CollectionId" class="form-label">Колекция:</label>
                <select asp-for="CollectionId" asp-items="Model.Collections" class="form-select">
                    <option value="">Изберете колекция</option>
                </select>
                <span asp-validation-for="CollectionId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AcquisitionId" class="form-label">Начин на придобиване:</label>
                <select asp-for="AcquisitionId" asp-items="Model.Acquisitions" class="form-select">
                    <option value="">Изберете начин</option>
                </select>
                <span asp-validation-for="AcquisitionId" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="LocationId" class="form-label">Локация:</label>
                <select asp-for="LocationId" asp-items="Model.Locations" class="form-select">
                    <option value="">Изберете локация</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="AssociateId" value="@Model.AssociateId" />

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50">Добави</button>
            </div>
        </form>
    </div>

    <!-- Add your scripts here -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRkqGh5q5p8r+KnujshIH+Htwkxt/3cG9Yp6z8chIbV19vvzCxje7FjmATY" crossorigin="anonymous"></script>
    <script src="~/js/Associate/AddExhibit.js"></script>
</body>
</html>
