@model AddCollectionViewModel

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-Q6E4yUw8doU2zLMH/Rl6jjDeCBr0hbvdH2yijXQnC4CZ6+09mMfn5bgRmA9R1U5J" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Associate/AddCollection.css" />
</head>
<body>
    <div class="view-container container mt-5">

        @* Set the page title *@
        @{
            ViewData["Title"] = "Добавяне на колекция";
        }

        <form asp-action="AddCollection" method="post" class="form-container bg-light p-4 rounded shadow">

            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Име на колекцията:</label>
                <input asp-for="Name" class="form-control" placeholder="Въведете името на колекцията" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание:</label>
                <textarea asp-for="Description" class="form-control" placeholder="Добавете описание на колекцията" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Era -->
            <div class="form-group mb-3">
                <label asp-for="EraId" class="form-label">Избери ера:</label>
                <select asp-for="EraId" asp-items="Model.Eras" class="form-select">
                    <option value="">Изберете ера</option>
                </select>
                <span asp-validation-for="EraId" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-group mb-4">
                <label asp-for="LocationId" class="form-label">Избери локация:</label>
                <select asp-for="LocationId" asp-items="Model.Locations" class="form-select">
                    <option value="">Изберете локация</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <!-- Hidden Field for AssociateId -->
            <input type="hidden" asp-for="AssociateId" value="@Model.AssociateId" />

            <!-- Submit Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50">Добави</button>
            </div>
        </form>
    </div>

    <!-- JS Links -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRkqGh5q5p8r+KnujshIH+Htwkxt/3cG9Yp6z8chIbV19vvzCxje7FjmATY" crossorigin="anonymous"></script>
    <script src="~/js/Associate/AddCollection.js"></script>
</body>
</html>
