@model AddCollectionViewModel

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <!-- Add your CSS files here -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-Q6E4yUw8doU2zLMH/Rl6jjDeCBr0hbvdH2yijXQnC4CZ6+09mMfn5bgRmA9R1U5J" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Associate/EditCollection.css" />
</head>
<body>
    <div class="view-container" style="margin-top:100px;">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Редактирай колекцията</h1>

            <form asp-action="EditCollectionById" method="post">
                <!-- Name Input -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Име:</label>
                    <input asp-for="Name" class="form-control" placeholder="Въведете името на колекцията" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description Input -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Описание:</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Добавете описание на колекцията" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Era Select -->
                <div class="form-group mb-3">
                    <label asp-for="EraId" class="form-label">Избери епоха:</label>
                    <select asp-for="EraId" asp-items="Model.Eras" class="form-select">
                        <option value="">Изберете епоха</option>
                    </select>
                    <span asp-validation-for="EraId" class="text-danger"></span>
                </div>

                <!-- Location Select -->
                <div class="form-group mb-3">
                    <label asp-for="LocationId" class="form-label">Избери локация:</label>
                    <select asp-for="LocationId" asp-items="Model.Locations" class="form-select">
                        <option value="">Изберете локация</option>
                    </select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

                <!-- Hidden Inputs for Id and AssociateId -->
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="hidden" asp-for="AssociateId" value="@Model.AssociateId" />

                <!-- Submit Button -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-50">Запази</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add your scripts here -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRkqGh5q5p8r+KnujshIH+Htwkxt/3cG9Yp6z8chIbV19vvzCxje7FjmATY" crossorigin="anonymous"></script>
</body>
</html>
