@model PaginatedList<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a href="@Url.Action("SeeAllUsers", new { page = 1, pageSize = Model.PageSize, sortBy = "FirstName", ascending = ViewData["SortOrderFirstName"] as bool? ?? true })">
                    First Name
                    @if (ViewData["SortBy"]?.ToString() == "FirstName")
                    {
                        <span>@(ViewData["SortOrderFirstName"] as bool? == true ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("SeeAllUsers", new { page = 1, pageSize = Model.PageSize, sortBy = "LastName", ascending = ViewData["SortOrderLastName"] as bool? ?? true })">
                    Last Name
                    @if (ViewData["SortBy"]?.ToString() == "LastName")
                    {
                        <span>@(ViewData["SortOrderLastName"] as bool? == true ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>Email</th>
            <th>Degree</th>
            <th>Specialty</th>
            <th>City</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Degree</td>
                <td>@user.Specialty</td>
                <td>@user.City</td>
                <td>@user.Adress</td>
                <td>
                    <a href="@Url.Action("Edit", "Administrator", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Administrator", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Action("SeeAllUsers", "Administrator", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, sortBy = ViewData["SortBy"], ascending = ViewData["SortOrder"] })" class="btn btn-primary btn-sm">Previous</a>
    }

    @if (Model.HasNextPage)
    {
        <a href="@Url.Action("SeeAllUsers", "Administrator", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, sortBy = ViewData["SortBy"], ascending = ViewData["SortOrder"] })" class="btn btn-primary btn-sm">Next</a>
    }
</div>

<div>
    <p>Page @Model.CurrentPage of @Model.TotalPages</p>
</div>
