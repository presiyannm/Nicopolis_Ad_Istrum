@model PaginatedList<ApplicationUser>

@{
    ViewData["Title"] = "Всички потребители";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-nowrap">
                <a href="@Url.Action("SeeAllUsers", new { page = 1, pageSize = Model.PageSize, sortBy = "FirstName", ascending = ViewData["SortOrderFirstName"] as bool? ?? true })">
                    Първо име
                </a>
            </th>
            <th>
                <a href="@Url.Action("SeeAllUsers", new { page = 1, pageSize = Model.PageSize, sortBy = "LastName", ascending = ViewData["SortOrderLastName"] as bool? ?? true })">
                    Фамилия
                </a>
            </th>
            <th>Имейл</th>
            <th>Степен на образование</th>
            <th>Специалност</th>
            <th>Град</th>
            <th>Адрес</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Degree</td>
                <td>@user.Specialty</td>
                <td>@user.City</td>
                <td>@user.Adress</td>
                <td>
                    <a href="@Url.Action("EditUserById", "Administrator", new { userId = user.Id })" class="btn btn-warning btn-sm mb-3">Промени</a>
                    <a href="@Url.Action("Delete", "Administrator", new { id = user.Id })" class="btn btn-danger btn-sm">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Action("SeeAllUsers", "Administrator", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, sortBy = ViewData["SortBy"], ascending = ViewData["SortOrder"] })" class="btn btn-primary btn-sm">Назад</a>
    }

    @if (Model.HasNextPage)
    {
        <a href="@Url.Action("SeeAllUsers", "Administrator", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, sortBy = ViewData["SortBy"], ascending = ViewData["SortOrder"] })" class="btn btn-primary btn-sm">Напред</a>
    }
</div>

<div>
    <p>Страница @Model.CurrentPage от @Model.TotalPages</p>
</div>
