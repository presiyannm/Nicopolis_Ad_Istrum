@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <section>
                <form id="account" method="post">
                    <h2 class="text-center" style="color:white">Вход:</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" role="alert" style="color:white"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Имейл</label>
                        <span asp-validation-for="Input.Email" style="color:white"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="парола" />
                        <label asp-for="Input.Password" class="form-label">Парола</label>
                        <span asp-validation-for="Input.Password" style="color:white"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" style="color:white">Регистрирай се като нов потребител</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
